#!/usr/bin/env perl

use feature ':5.14';
use strict;
use warnings 'all';
$^W = 1;

use Tie::IxHash;
use Text::xSV;
use JSON::XS;

my $csv = Text::xSV->new;
my $JSON = JSON::XS->new->canonical->utf8;
my %header = ();
tie(%header, 'Tie::IxHash');
$header{$_} = 1 for @ARGV;


{
  my $already_setup;
  sub setup_header {
    return if $already_setup;
    my $rec = shift;
    $already_setup = 1;
    %header = (
      %$rec,
    );
    $csv->set_header(keys %header);
    $csv->print_header();
  }
};

while (my $line = <STDIN>) {
  my $rec = $JSON->decode($line);
  setup_header($rec);
  for my $key (keys %$rec) {
    next if exists $header{$key};
    warn "Skipping unexpected field '$key'";
    delete $rec->{$key};
  }
  for my $key (keys %header) {
    next if exists $rec->{$key};
    $rec->{$key} = "";
  }
  $csv->print_data(%$rec);
}
