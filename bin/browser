#!/bin/sh

HOST="`hostname`"
case "$HOST" in
    andrewruder-hplin)
        ip="10.63.192.31"
        unset all_proxy
        unset http_proxy
        unset https_proxy
        unset ftp_proxy
        export no_proxy=elecsys-git,elecsys-web,10.63.\*,elecsys-\*
        export SOCKS_SERVER="$ip:5555"
        export SOCKS_VERSION=5
        ;;
esac

url="$1"
if [ "$url" = "" ]; then
    url=http://www.google.com
fi

if which google-chrome 2> /dev/null ; then
    google-chrome "$url"
elif which chromium 2> /dev/null ; then
    chromium "$url"
elif which firefox 2> /dev/null ; then
    firefox --new-tab "$url"
elif which iceweasel 2> /dev/null ; then
    iceweasel --new-tab "$url"
else
    echo "No web browsers found"
    exit 1
fi
