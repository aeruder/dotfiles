#!/usr/bin/env zsh

if which termite > /dev/null 2> /dev/null ; then
    if [ $# -gt 0 ]; then
        exec termite --exec="$*"
    else
        exec termite
    fi
elif which konsole > /dev/null 2> /dev/null ; then
    if [ $# -gt 0 ]; then
        exec konsole -e "$@"
    else
        exec konsole
    fi
elif which xfce4-terminal > /dev/null 2> /dev/null ; then
    if [ $# -gt 0 ]; then
        exec xfce4-terminal -x env TERM=xterm-256color "$@"
    else
        exec xfce4-terminal -x env TERM=xterm-256color /bin/zsh
    fi
fi
