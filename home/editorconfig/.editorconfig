# http://editorconfig.org/

[*]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.el]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{pl,pm,t}]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{js,jsx,css,less}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
end_of_line = lf
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
end_of_line = lf
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true
