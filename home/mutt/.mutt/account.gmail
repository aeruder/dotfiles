# vim:ft=muttrc

set from="aeruder@gmail.com"
set hostname="gmail.com"
set folder = "imaps://imap.gmail.com/"
set spoolfile="+INBOX"
set postponed="+[Gmail]/Drafts"
set record="+[Gmail]/Sent Mail"
set smtp_url = "smtps://aeruder@gmail.com@smtp.gmail.com"
set signature="~/.mutt/account.gmail.signature"

set imap_user="aeruder@gmail.com"
set imap_pass="$my_gmail_pass"
set smtp_pass="$my_gmail_pass"

# Move message(s) to Spam/Verified by pressing "S"
macro index S ""
macro pager S ""
# Move message(s) to Spam/Ham by pressing "H"
macro index H ""
macro pager H ""
# Return to Inbox by pressing "."
macro index . "<change-folder>+INBOX<enter>" "Inbox"
# Move to archive
macro index A ""
macro pager A ""
