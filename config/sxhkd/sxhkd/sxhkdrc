# vi:ts=8:sw=8:noet
#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit
	pkill panel

# Window commands

super + w
	bspc window --close

super + shift + w
	bspc window --kill

super + grave
	bspc window last --focus

super + p
	bspc window --flag private

super + shift + p
	bspc window --flag locked

super + t
	bspc window --state tiled

super + s
	bspc window --state floating

super + shift + s
	bspc window --state pseudo_tiled

super + f
	bspc window --state fullscreen

super + apostrophe
	bspc window --swap last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} --focus; \
	bspc control --record-history on

super + y
	bspc window --to-window last.manual

super + m
	bspc window --swap biggest

super + {_,shift + }r
	bspc window {next,prev} --focus

super + {_,shift + }{h,j,k,l}
	bspc window --{focus,swap} {left,down,up,right}

super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

super + alt + {h,j,k,l}
	bspc window --edge {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window --edge {right -10,up +10,down -10,left +10}

super + ctrl + space
	bspc window --presel cancel

super + ctrl + {1-9}
	bspc window --ratio 0.{1-9}

super + shift + {1-9,0}
	bspc window --to-desktop {0-9}

# Desktop commands
super + shift + t
	bspc desktop --layout next

super + b
	bspc desktop --balance

super + Tab
	bspc desktop --focus last

super + {comma,period}
	bspc desktop --circulate {backward,forward}

super + bracket{left,right}
	mon="`bspc query -M -m focused`"; \
	bspc query -M | while read line ; do \
	  bspc monitor --focus "$line" ; \
	  bspc desktop --focus {prev,next} ; \
	done ; bspc monitor --focus "$mon"

super + {1-9,0}
	bspc desktop --focus {0-9}

super + e
	bspc desktop --equalize

super + n
	bspc desktop --flip vertical

# Monitor commands
super + shift + bracket{left,right}
	bspc monitor --focus {prev,next}

# Mouse stuff

~button1
	bspc pointer --grab focus

super + button{1-3}
	bspc pointer --grab {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer --track %i %i

super + @button{1-3}
	bspc pointer --ungrab

#
# wm independent hotkeys
#

super + Return
	launch-terminal

super + space
	dmenu_run

super + shift + space
	dmenu-windows

super + alt + d
	dmenu-datasheets

super + alt + f
	launch-browser

super + alt + shift + f
	launch-browser-paste

super + alt + m
    launch-mail

super + alt + s
	screenshot

super + alt + shift + s
	screenshot full

super + alt + i
	launch-irc

super + alt + w
    launch-tmux work

super + alt + shift + m
    launch-tmux music

super + v
	toggle_conky

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Misc

XF86MonBrightnessUp
	xbacklight -inc 1

XF86MonBrightnessDown
    xbacklight -dec 1

XF86TouchpadToggle
	touchpad_toggle.sh

XF86AudioRaiseVolume
	ponymix increase 5

XF86AudioLowerVolume
	ponymix decrease 5

XF86KbdBrightnessUp
	sudo keyboard_led.sh up

XF86KbdBrightnessDown
	sudo keyboard_led.sh down

XF86AudioMute
	ponymix toggle

XF86AudioNext
	mpc next

XF86AudioPrev
	mpc cdprev

XF86AudioPlay
	mpc toggle

#XF86AudioStop
#	cmus-remote --stop
