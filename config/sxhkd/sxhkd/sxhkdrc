# super + @button{1-3}
# 	bspc pointer --ungrab

#
# wm independent hotkeys
#

super + Return
	launch-terminal

super + space
	dmenu_run

super + shift + space
	dmenu-windows

super + alt + d
	dmenu-datasheets

super + alt + f
	launch-browser

super + alt + shift + f
	launch-browser-paste

super + alt + m
    launch-mail

super + alt + s
	screenshot

super + alt + shift + s
	screenshot full

super + alt + i
	launch-irc

super + alt + w
    launch-tmux work

super + alt + shift + m
    launch-tmux music

super + v
	toggle_conky

# Misc

XF86MonBrightnessUp
	xbacklight -inc 1

XF86MonBrightnessDown
    xbacklight -dec 1

XF86TouchpadToggle
	touchpad_toggle.sh

XF86AudioRaiseVolume
	ponymix increase 5

XF86AudioLowerVolume
	ponymix decrease 5

XF86KbdBrightnessUp
	sudo keyboard_led.sh up

XF86KbdBrightnessDown
	sudo keyboard_led.sh down

XF86AudioMute
	ponymix toggle

XF86AudioNext
	mpc next

XF86AudioPrev
	mpc cdprev

XF86AudioPlay
	mpc toggle

super + alt + bracket{left,right}
	mpc {cdprev,next}

super + alt + o
	mpc toggle

#XF86AudioStop
#	cmus-remote --stop
