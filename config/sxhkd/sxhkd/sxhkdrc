# vi:ts=8:sw=8:noet

super + alt + Escape
	pkill -x panel; \
	bspc quit

super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#
# Node commands

super + w
	bspc node --close

super + shift + w
	bspc node --kill

super + grave
	bspc node last --focus

super + p
	bspc node --flag private

super + shift + p
	bspc node --flag locked

super + t
	bspc node --state tiled

super + s
	bspc node --state floating

super + shift + s
	bspc node --state pseudo_tiled

super + f
	bspc node --state fullscreen

super + apostrophe
	bspc node --swap last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} --focus; \
	bspc control --record-history on

super + y
	bspc node --to-node last.manual

super + m
	bspc node --swap biggest

super + {_,shift + }r
	bspc node {next,prev} --focus

super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}

super + ctrl + {h,j,k,l}
	bspc node --presel-dir {west,south,north,east}

super + ctrl + space
	bspc node --presel-dir cancel

super + ctrl + {1-9}
	bspc node --ratio 0.{1-9}

super + shift + {1-9,0}
	bspc node --to-desktop {1-9,10}

# Desktop commands
super + shift + t
	bspc desktop --layout next

super + b
	bspc node --balance

super + Tab
	bspc desktop --focus last

super + {comma,period}
	bspc node --circulate {backward,forward}

super + bracket{left,right}
	bspc desktop --focus {prev,next}.local

super + shift + bracket{left,right}
	bspc node --to-desktop {prev,next}.local

super + {1-9,0}
	bspc desktop --focus {1-9,10}

super + e
	bspc node --equalize

super + n
	bspc desktop --flip vertical

# Monitor commands
super + alt + bracket{left,right}
	bspc monitor --focus {west,east}

super + alt + shift + bracket{left,right}
	bspc node --to-monitor {west,east}

# Mouse stuff

